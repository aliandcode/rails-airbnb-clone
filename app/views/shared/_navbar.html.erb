<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class= "row align-items-center">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png" %>
    <% end %>
    <%= form_tag root_path, method: :get do %>
    <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Where?" %>
    <% end %>
  </div>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item padding-lat">
          <%= link_to "Become a host", new_house_path, class: "nav-link" %>
        </li>
        <li class="nav-item padding-lat">
          <%= link_to "Hello, #{current_user.firstname.capitalize}", dashboard_pages_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "#{current_user.photo}", class: "avatar dropdown-toggle pointer", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Dashboard", dashboard_pages_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>




