<h4>Book the place</h4>
<%= simple_form_for [@house, @booking], url: house_bookings_path(@house), method: :post  do |f| %>
  <br>
  <%= f.label :checkin_date %>
  <%= f.text_field :checkin_date %>
  <br>
  <%= f.label :checkout_date %>
  <%= f.text_field :checkout_date %>
  <br>
  <%= f.label "Guests" %>
  <%= f.text_field :guests %>
  <br>
  <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
    <i class="icon-ok icon-white"></i> Add
  <% end %>
<% end %>


